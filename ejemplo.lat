incluir("gtk")

gtk.iniciar() // iniciamos una aplicación de GTK
mi_ventana = gtk.ventanaNueva() // creamos una ventana declarandola
gtk.titulo(mi_ventana, "Prueba de GTK") // asignamos un título a la ventana
gtk.ventanaMagnitud(mi_ventana, 500, 500) // le cambiamos el tamaño a la ventana
caja = gtk.cajaNueva() // creamos una caja nueva declarandola
gtk.agregar(mi_ventana, caja) // agregamos la caja a la ventana
boton = gtk.botonTexto(mi_ventana, caja, "SALIR") // creamos un botón de texto declarandolo
gtk.agregar(caja, boton) // agregamos el texto del boton a la caja
gtk.botonDestruir(mi_ventana, boton) // mencionamos que al pulsar el botón destruya la ventana
gtk.mostrarTodo(mi_ventana) // mostramos todo lo de la ventana
gtk.menu()  // finalmente hacemos que la ventana se muestre en el sistema operativo
